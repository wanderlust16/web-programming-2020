<!DOCTYPE html>
	<html>
		<head>
			<title>Members</title>
	        <%= stylesheet_link_tag "members", media: "all" %>

		</head>
		
		<body>
            <h1><%= link_to "Oh My Girl", '/', class:"title" %></h1>
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th>b-day</th>
						<th>position</th>
					</tr>
				</thead>
				<tbody>
                    <% @members.each do |member| %>
                        <tr>
                            <td><%= link_to image_tag(member.image), member_path(id: member.id) %></td>
                            <td><%= member.name %></td>
                            <td><%= member.bday %></td>
                            <td><%= member.position %></td>
                        </tr>
                    <% end %>
				</tbody>
			</table>
		</body>
					
	</html>